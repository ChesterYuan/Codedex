Gryffindor = 0
Ravenclaw = 0
Hufflepuff = 0
Slytherin = 0

print('===============')
print('The Sorting Hat')
print('===============')

print('Q1, Do you like Dawn or Dusk?')

print ('1, Dawn 2, Dusk')

answer = int(input('Enter your answer: '))

if answer == 1:
  Gryffindor += 1
  Ravenclaw += 1

elif answer == 2:
  Hufflepuff += 1
  Slytherin += 1

else:
  print('Wrong input')

print('Q2, When I‚Äôm dead, I want people to remember me as:')

print ('1, The Good 2, The Great 3, The Wise 4, The Bold ')

answer = int(input('Enter your answer: '))

if answer == 1:
  Hufflepuff += 1

elif answer == 2:
  Slytherin += 2

elif answer == 3:
  Ravenclaw += 2

elif answer == 4:
  Gryffindor += 2

else:
  print('Wrong input')

print('Q3, Which kind of instrument most pleases your ear?')

print ('1, The violin 2, The trumpet 3, The piano 4, The drum ')

answer = int(input('Enter your answer: '))

if answer == 1:
  Slytherin += 4

elif answer == 2:
  Hufflepuff += 4

elif answer == 3:
  Ravenclaw += 4

elif answer == 4:
  Gryffindor += 4
  
else:
  print('Wrong input')

print('Gryffindor', Gryffindor)
print('Ravenclaw', Ravenclaw)
print('Hufflepuff', Hufflepuff)
print('Slytherin', Slytherin)

most_points = max(gryffindor, ravenclaw, hufflepuff, slytherin)  

if gryffindor == most_points:
  print('ü¶Å Gryffindor!')
elif ravenclaw == most_points:
  print('ü¶Ö Ravenclaw!')
elif hufflepuff == most_points:
  print('ü¶° Hufflepuff!')
else:
  print('üêç Slytherin!')
